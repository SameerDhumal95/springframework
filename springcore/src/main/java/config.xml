<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p ="http://www.springframework.org/schema/p"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean class="com.springcore.Student" name="student1">
		<property name="studentId">
			<value>256</value>
		</property>
		<property name="studentName">
			<value>Sameer</value>
		</property>
		<property name="studentAddress">
			<value>Maharashtra</value>
		</property>
	</bean>
	<!-- Using value as attribute-->
	  <bean class="com.springcore.Student" name="student2">
		<property name="studentId" value="289"/>
			
		<property name="studentName" value = "Suraj"/>
			
		<property name="studentAddress" value="pune"/>
			
	</bean>
	<!-- Using P schema for consize coding-->
	 <bean class="com.springcore.Student" name="student3" p:studentId="21"
	 p:studentName="Shubham" p:studentAddress="Mumbai"/>
		

</beans>